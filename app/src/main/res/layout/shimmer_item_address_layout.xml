<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/tm16"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/tm16"
    android:paddingTop="@dimen/tm単10"
    android:paddingEnd="@dimen/tm16"
    android:paddingBottom="@dimen/tm単10"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.palma.apps.graziapp.utils.MSPTextViewBold
            android:id="@+id/tv_address_full_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/placeholder_bg"
            android:textColor="@color/item_value_text_color"
            android:textSize="@dimen/item_address_name_textSize"
            tools:text="Christopher Palma" />

        <com.palma.apps.graziapp.utils.MSPTextView
            android:id="@+id/tv_address_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/placeholder_bg"
            android:paddingStart="@dimen/tm単10"
            android:paddingTop="@dimen/item_address_type_paddingTopBottom"
            android:paddingEnd="@dimen/tm単10"
            android:paddingBottom="@dimen/item_address_type_paddingTopBottom"
            android:textColor="@color/white"
            android:textSize="@dimen/address_details_textSize"
            android:textStyle="bold"
            tools:text="Home" />
    </LinearLayout>

    <com.palma.apps.graziapp.utils.MSPTextView
        android:id="@+id/tv_address_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/address_details_marginTop"
        android:textColor="@color/item_value_text_color"
        android:textSize="@dimen/address_details_textSize"
        android:background="@color/placeholder_bg"
        tools:text="XYZ" />

    <com.palma.apps.graziapp.utils.MSPTextView
        android:id="@+id/tv_address_mobile_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/address_details_marginTop"
        android:textColor="@color/item_value_text_color"
        android:textSize="@dimen/address_details_textSize"
        android:background="@color/placeholder_bg"
        tools:text="+51 123456789" />
</LinearLayout>
