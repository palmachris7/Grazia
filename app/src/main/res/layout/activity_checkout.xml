<?xml version="1.0" encoding="utf-8"?>
<!--TODO Step 3: Design the screen layout.-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOffWhite"
    tools:context=".activities.CheckoutActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_checkout_activity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@drawable/app_gradient_color_background">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="@dimen/tm5"
            android:paddingEnd="0dp"
            android:text="@string/confirmar"
            android:textColor="@android:color/white"
            android:textSize="@dimen/lbl18"
            android:textStyle="bold"
            android:paddingLeft="@dimen/tm5"
            android:paddingRight="0dp" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_checkout_activity"
        android:layout_above="@+id/ll_checkout_place_order"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.palma.apps.graziapp.utils.MSPTextView
                android:id="@+id/tv_product_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/chk16"
                android:layout_marginTop="@dimen/chk10"
                android:layout_marginEnd="@dimen/chk16"
                android:paddingTop="@dimen/lbl2"
                android:paddingBottom="@dimen/lbl2"
                android:text="@string/confitems"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/lbl14" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_cart_list_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_product_items" />

            <com.palma.apps.graziapp.utils.MSPTextView
                android:id="@+id/tv_selected_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rv_cart_list_items"
                android:layout_marginStart="@dimen/chk16"
                android:layout_marginTop="@dimen/chk10"
                android:layout_marginEnd="@dimen/chk16"
                android:layout_marginBottom="@dimen/chk10"
                android:paddingTop="@dimen/lbl2"
                android:paddingBottom="@dimen/lbl2"
                android:text="@string/direccionconf"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/lbl14" />

            <LinearLayout
                android:id="@+id/ll_checkout_address_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_selected_address"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/chk16"
                android:paddingTop="@dimen/chk10"
                android:paddingEnd="@dimen/chk16"
                android:paddingBottom="@dimen/chk10">

                <com.palma.apps.graziapp.utils.MSPTextView
                    android:id="@+id/tv_checkout_address_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/lbl2"
                    android:paddingBottom="@dimen/lbl2"
                    android:textColor="@color/item_value_text_color"
                    android:textSize="@dimen/lbl14"
                    android:textStyle="bold"
                    tools:text="Home" />

                <com.palma.apps.graziapp.utils.MSPTextViewBold
                    android:id="@+id/tv_checkout_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/item_value_text_color"
                    android:textSize="@dimen/lbl18"
                    tools:text="Denis Panjuta" />

                <com.palma.apps.graziapp.utils.MSPTextView
                    android:id="@+id/tv_checkout_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lbl2"
                    android:textColor="@color/item_value_text_color"
                    android:textSize="@dimen/lbl14"
                    tools:text="XYZ" />

                <com.palma.apps.graziapp.utils.MSPTextView
                    android:id="@+id/tv_checkout_additional_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lbl2"
                    android:textColor="@color/item_value_text_color"
                    android:textSize="@dimen/lbl14"
                    tools:text="XYZ" />

                <com.palma.apps.graziapp.utils.MSPTextView
                    android:id="@+id/tv_checkout_other_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lbl2"
                    android:textColor="@color/item_value_text_color"
                    android:textSize="@dimen/lbl14"
                    tools:text="XYZ" />

                <com.palma.apps.graziapp.utils.MSPTextView
                    android:id="@+id/tv_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lbl2"
                    android:textColor="@color/item_value_text_color"
                    android:textSize="@dimen/lbl14"
                    tools:text="+64 123456789" />
            </LinearLayout>

            <com.palma.apps.graziapp.utils.MSPTextView
                android:id="@+id/tv_items_receipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_checkout_address_details"
                android:layout_marginStart="@dimen/chk16"
                android:layout_marginTop="@dimen/chk10"
                android:layout_marginEnd="@dimen/chk16"
                android:layout_marginBottom="@dimen/chk10"
                android:paddingTop="@dimen/lbl2"
                android:paddingBottom="@dimen/lbl2"
                android:text="@string/items"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/lbl14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_items_receipt"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/chk16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.palma.apps.graziapp.utils.MSPTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_subtotal"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/lbl18" />

                    <com.palma.apps.graziapp.utils.MSPTextView
                        android:id="@+id/tv_checkout_sub_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/lbl18"
                        tools:text="Rs.100"
                        android:gravity="center_horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.palma.apps.graziapp.utils.MSPTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lblcostoenv"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/lbl18" />

                    <com.palma.apps.graziapp.utils.MSPTextView
                        android:id="@+id/tv_checkout_shipping_charge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Rs.10.0"
                        android:textAlignment="center"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/lbl18"
                        android:gravity="center_horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.palma.apps.graziapp.utils.MSPTextViewBold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbltotla"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/lbl18" />

                    <com.palma.apps.graziapp.utils.MSPTextViewBold
                        android:id="@+id/tv_checkout_total_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/lbl18"
                        tools:text="$110"
                        android:gravity="center_horizontal" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_checkout_place_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/lbl16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.palma.apps.graziapp.utils.MSPTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/metodopago"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/lbl18" />

            <com.palma.apps.graziapp.utils.MSPTextViewBold
                android:id="@+id/tv_payment_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contraentrega"
                android:textAlignment="center"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/lbl18"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <com.palma.apps.graziapp.utils.MSPButton
            android:id="@+id/btn_place_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_background"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingTop="@dimen/tmñpadding"
            android:paddingBottom="@dimen/tmñpadding"
            android:text="@string/orden"
            android:textColor="@android:color/white"
            android:textSize="@dimen/lbl18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_terms_and_condition"
            tools:ignore="UnusedAttribute" />

    </LinearLayout>
</RelativeLayout>