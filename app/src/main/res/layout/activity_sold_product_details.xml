<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOffWhite"
    tools:context=".activities.MyOrderDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_sold_product_details_activity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/app_gradient_color_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="@dimen/tm5"
            android:paddingEnd="0dp"
            android:text="@string/txtDetalledelprodVend"
            android:textColor="@color/white"
            android:textSize="@dimen/lbl18"
            android:textStyle="bold"
            android:paddingLeft="@dimen/tm5"
            android:paddingRight="0dp" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_sold_product_details_activity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.palma.apps.graziapp.utils.MSPTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/lbl16"
                android:layout_marginTop="@dimen/ordn10"
                android:layout_marginEnd="@dimen/lbl16"
                android:paddingTop="@dimen/lbl2"
                android:paddingBottom="@dimen/lbl2"
                android:text="@string/txtDetalles"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/lbl14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/lbl16"
                android:paddingTop="@dimen/ordn10"
                android:paddingEnd="@dimen/lbl16"
                android:paddingBottom="@dimen/ordn10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.palma.apps.graziapp.utils.MSPTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ordenid"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/lbl18" />

                    <com.palma.apps.graziapp.utils.MSPTextView
                        android:id="@+id/tv_order_details_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/lbl18"
                        tools:text="123456"
                        android:gravity="center_horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.palma.apps.graziapp.utils.MSPTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/fecha"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/lbl18" />

                    <com.palma.apps.graziapp.utils.MSPTextView
                        android:id="@+id/tv_order_details_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/lbl18"
                        tools:text="20 Oct 2020"
                        android:gravity="center_horizontal" />
                </LinearLayout>
            </LinearLayout>

            <com.palma.apps.graziapp.utils.MSPTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/lbl16"
                android:layout_marginTop="@dimen/ordn10"
                android:layout_marginEnd="@dimen/lbl16"
                android:paddingTop="@dimen/lbl2"
                android:paddingBottom="@dimen/lbl2"
                android:text="@string/confitems"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/lbl14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/lbl16"
                android:paddingTop="@dimen/ven10"
                android:paddingEnd="@dimen/lbl16"
                android:paddingBottom="@dimen/ven10"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rv_item_image_background"
                    android:padding="@dimen/lbl2">

                    <ImageView
                        android:id="@+id/iv_product_item_image"
                        android:layout_width="@dimen/item_image_width"
                        android:layout_height="@dimen/item_image_height"
                        android:contentDescription="@string/imagen"
                        android:scaleType="fitXY" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/lbl16"
                    android:layout_marginEnd="@dimen/lbl16"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.palma.apps.graziapp.utils.MSPTextViewBold
                        android:id="@+id/tv_product_item_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/item_value_text_color"
                        android:textSize="@dimen/lbl14"
                        tools:text="Nombre" />

                    <com.palma.apps.graziapp.utils.MSPTextView
                        android:id="@+id/tv_product_item_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/lbl2"
                        android:textColor="@color/item_value_text_color"
                        android:textSize="@dimen/sold_details_value_textSize"
                        android:textStyle="bold"
                        tools:text="S/. 100.00" />
                </LinearLayout>
                <com.palma.apps.graziapp.utils.MSPTextView
                    android:id="@+id/tv_sold_product_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_grey_border_background"
                    android:paddingStart="@dimen/crrto16"
                    android:paddingTop="@dimen/cart_quantity_paddingTopBottom"
                    android:paddingEnd="@dimen/crrto16"
                    android:paddingBottom="@dimen/cart_quantity_paddingTopBottom"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/lbl14"
                    android:textStyle="bold"
                    tools:text="1" />
            </LinearLayout>

            <com.palma.apps.graziapp.utils.MSPTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/lbl16"
                android:layout_marginTop="@dimen/ordn10"
                android:layout_marginEnd="@dimen/lbl16"
                android:layout_marginBottom="@dimen/ordn10"
                android:paddingTop="@dimen/lbl2"
                android:paddingBottom="@dimen/lbl2"
                android:text="@string/direccion"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/lbl14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/lbl16"
                android:paddingTop="@dimen/ordn10"
                android:paddingEnd="@dimen/lbl16"
                android:paddingBottom="@dimen/ordn10">

                <com.palma.apps.graziapp.utils.MSPTextView
                    android:id="@+id/tv_my_order_details_address_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/lbl2"
                    android:paddingBottom="@dimen/lbl2"
                    android:textColor="@color/item_value_text_color"
                    android:textSize="@dimen/lbl14"
                    android:textStyle="bold"
                    tools:text="Home" />

                <com.palma.apps.graziapp.utils.MSPTextViewBold
                    android:id="@+id/tv_my_order_details_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/item_value_text_color"
                    android:textSize="@dimen/lbl18"
                    tools:text="Christopher Palma" />

                <com.palma.apps.graziapp.utils.MSPTextView
                    android:id="@+id/tv_my_order_details_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lbl2"
                    android:textColor="@color/item_value_text_color"
                    android:textSize="@dimen/lbl14"
                    tools:text="XYZ" />

                <com.palma.apps.graziapp.utils.MSPTextView
                    android:id="@+id/tv_my_order_details_additional_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lbl2"
                    android:textColor="@color/item_value_text_color"
                    android:textSize="@dimen/lbl14"
                    tools:text="XYZ" />

                <com.palma.apps.graziapp.utils.MSPTextView
                    android:id="@+id/tv_my_order_details_other_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lbl2"
                    android:textColor="@color/item_value_text_color"
                    android:textSize="@dimen/lbl14"
                    tools:text="XYZ" />

                <com.palma.apps.graziapp.utils.MSPTextView
                    android:id="@+id/tv_my_order_details_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lbl2"
                    android:textColor="@color/item_value_text_color"
                    android:textSize="@dimen/lbl14"
                    tools:text="+51 123456789" />
            </LinearLayout>

            <com.palma.apps.graziapp.utils.MSPTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/lbl16"
                android:layout_marginTop="@dimen/ordn10"
                android:layout_marginEnd="@dimen/lbl16"
                android:layout_marginBottom="@dimen/ordn10"
                android:paddingTop="@dimen/lbl2"
                android:paddingBottom="@dimen/lbl2"
                android:text="@string/items"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/lbl14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/lbl16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.palma.apps.graziapp.utils.MSPTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_subtotal"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/lbl18" />

                    <com.palma.apps.graziapp.utils.MSPTextView
                        android:id="@+id/tv_order_details_sub_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/lbl18"
                        tools:text="$100"
                        android:gravity="center_horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.palma.apps.graziapp.utils.MSPTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lblcostoenv"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/lbl18" />

                    <com.palma.apps.graziapp.utils.MSPTextView
                        android:id="@+id/tv_order_details_shipping_charge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/lbl18"
                        tools:text="$10.0"
                        android:gravity="center_horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.palma.apps.graziapp.utils.MSPTextViewBold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbltotla"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/lbl18" />

                    <com.palma.apps.graziapp.utils.MSPTextViewBold
                        android:id="@+id/tv_order_details_total_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/lbl18"
                        tools:text="$110"
                        android:gravity="center_horizontal" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

